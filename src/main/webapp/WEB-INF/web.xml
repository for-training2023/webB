<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

	<welcome-file-list>
		<welcome-file>ja/Sample</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Init</servlet-name>
		<servlet-class>jp.excd.servlet.MySQLSetting</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>Sample</servlet-name>
		<servlet-class>jp.excd.servlet.SampleServlet</servlet-class>	
		<init-param>
			<param-name>javaEncoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>Sample</servlet-name>
		<url-pattern>/ja/Sample/*</url-pattern>
	</servlet-mapping>

	<error-page>
    <error-code>404</error-code>
    <location>/jsp/404.jsp</location>
    </error-page>

  <servlet>
    <servlet-name>S00003</servlet-name>
    <servlet-class>jp.excd.servlet.S00003</servlet-class>
    <init-param>
      <param-name>javaEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>S00003</servlet-name>
    <url-pattern>/ja/S00003/*</url-pattern>
  </servlet-mapping>
  
</web-app>
